@using Mariage.Models
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/site.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
    <!--[if lt IE 9]>
    <script src="~/Scripts/html5shiv.js" type="text/javascript"></script>
    <![endif]-->
    <script src="@Url.Content("~/Scripts/easyslider.min.js")" type="text/javascript"></script>
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />
</head>
    <body>
        <header>
            @if (!BaseModel.Private)
            {
                @RenderPage("~/Views/Shared/PrivateForm.cshtml")
            }
            <h1>Perrine et Gabriel</h1>
            <p id="date-mariage">Le 11 mai 2013 à Gwenrann</p>
            @RenderPage("~/Views/Shared/Menu.cshtml", (BaseModel)Model)
        </header>
        <div id="content">
        @RenderBody()
        </div>
        <footer></footer>
    </body>
</html>
